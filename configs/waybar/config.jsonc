{
    "position": "top",
    "height": 32, 
    "spacing": 0, 
    "margin-top": 4,
    "reload_style_on_change": true,
    "modules-left": ["clock#date", "custom/updates"],
    "modules-center": ["hyprland/workspaces"],
    "modules-right": ["cpu", "memory", "pulseaudio","clock", "custom/power"],
    "custom/updates": {
        "exec": "checkupdates | wc -l",
	"format": "󰮯 {} pending updates",
	"interval": 60 
    },
    "clock": {
        "format": "󰥔 {:%I:%M%p}",
    	"height": 26
    },
    "clock#date": {
	"format": " {:%A, %b %d}"
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "format": " {}%"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
	"active-only": false,
	"all-outputs": true,
	"format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
	    "6": "",
            "urgent": ""
       }
   },
   "pulseaudio": {
    "format": "󰓃 {volume}%",
    "format-icons": {
        "headphone": "",
        "default": ["", ""]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"]
},
"custom/power": {
    "format": "{}",
    "rotate": 0,
    "exec": "echo ; echo  logout",
    "tooltip": true,
    "on-click": "wlogout"
},
   "sort-by-number": true

}